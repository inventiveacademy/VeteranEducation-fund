extends partial/landing-layout.pug

block content
	div.landing.main
		div.overlay
			h2 CALLING ALL VETERANS...
			h1 VETERAN EDUCATION FUND
			h3 The Veteran Education fund has your six.
			h3 Learn more and see if you qualify for educational funding.
			button#learnMore LEARN MORE

	include partial/content-card.pug
	
	div#cardForm
		div#formWrapper
			div.info
				h1 WANT TO SEE IF YOU QUALIFY?
				h2 IT'S FREE!
				h3 Initial screening will not affect your credit score.
			form(id="submitForm" action="submit")
				div.inputRow
					div.inputContainer
						label First Name
						input(class="input leftCol" type="text" id="fname" name="firstName" placeholder="First Name")
					div.inputContainer
						label Last Name
						input(class="input" type="text" id="lname" name="lastName" placeholder="Last Name")
				div.inputRow
					div.inputContainer
						label Email
						input(class="input leftCol" type="text" id="email" name="email" placeholder="Email")
					div.inputContainer
						label Phone
						input(class="input" type="text" id="phone" name="contactphone" placeholder="Phone")
				div.inputRow
					div.inputContainer
						label Address
						input(class="input leftCol" type="text" id="address" name="address" placeholder="Address")
					div.inputContainer
						label Zip
						input(class="input" type="text" id="zip" name="zip" placeholder="Zip")
				div.stateSelect
					label State
					select(id="name" name="state" placeholder="State")
						option Please select a state
						option(value="alabama") Alabama
						option(value="alaska") Alaska
						option(value="arizona") Arizona
						option(value="arkansas") Arkansas
						option(value="california") California
						option(value="colorado") Colorado
						option(value="connecticut") Connecticut
						option(value="delaware") Delaware
						option(value="florida") Florida
						option(value="georgia") Georgia
						option(value="hawaii") Hawaii
						option(value="idaho") Idaho
						option(value="illinois") Illinois
				button#submitAppBtn APPLY FOR FREE!


